SampleChooser {
  width: 80px;
  height: 22px;
  margin: 1px;
  padding: 3px;

  ::-webkit-file-upload-button {
    width: 100%;
    border: 1px solid #888;
    background: #6F6F6F;
    color: #D8D8D8;
    cursor: pointer;
    font-size: 90%;
    height: 18px;

    :hover {
      border: 1px solid #AA5;
      background: #993;
      color: #FFF;
      box-shadow: 0px 0px 5px #AA3;
    }
  }
}